(trigger
    (key [[alt][cmd][down]]))

(name [Open Project in Xcode])

(only-in [source.c, source.c++, source.objc, source.objc++])

(input nothing)

(output tooltip)

(save nothing)

(script [PROJECT=$(ruby -- "${TM_BUNDLE_SUPPORT}/bin/find_xcode_project.rb")
if [[ -f "${PROJECT}/project.pbxproj" ]]; then
   open -a Xcode "${PROJECT}"
else
   echo "Didn't find an Xcode project file."
   echo "You may want to set TM_XCODE_PROJECT."
fi
])